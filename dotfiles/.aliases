#!/bin/bash

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts
alias g="git"
alias clone="git -C ~/development clone"

# allow aliases to be sudod
alias sudo='sudo '

# IP addresses
alias pubip="curl -s https://api.ipify.org"

alias resource="source ~/.bashrc"

alias iswsl="grep -q [Mm]icrosoft /proc/sys/kernel/osrelease"